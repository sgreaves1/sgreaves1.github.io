<?xml version="1.0" encoding="UTF-8"?>
<addon id="sams.movies"
version="0.0.2"
name="Sams Movies"
provider-name="Sam">
<requires>
  <import addon="xbmc.python" version="3.0.0"/>
  <import addon="script.module.requests" version="2.22.0" />
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Plugin to play Sams Movies</summary>
  <description lang="en_GB">A video plugin for Kodi to play videos.</description>
  <disclaimer lang="en_GB">I do not own the videos, this is just a scraper.</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.jpg</screenshot>
    <screenshot>resources\screenshot-02.jpg</screenshot>
    <screenshot>resources\screenshot-03.jpg</screenshot>    
  </assets>
  <news>Plays TV shows now</news>
</extension>
</addon>
